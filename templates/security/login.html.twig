{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center"
     style="min-height: auto; padding: 60px 15px; background: linear-gradient(135deg, #0d6efd, #6f42c1);">

  <div class="shadow-lg p-4"
       style="border-radius: 1rem;
              background: rgba(30, 30, 30, 0.9);
              color: #f8f9fa;
              width: 100%;
              max-width: 400px;">

    <h1 class="h4 mb-4 text-center text-light">üîê Connexion</h1>

    {% if error %}
      <div class="alert alert-danger text-center">
        {{ error.messageKey|trans(error.messageData, 'security') }}
      </div>
    {% endif %}

    {% if app.user %}
      <div class="alert alert-success text-center">
        Connect√© en tant que <strong>{{ app.user.userIdentifier }}</strong><br>
        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-light mt-2">Se d√©connecter</a>
      </div>
    {% else %}
      <form method="post">
        <div class="mb-3">
          <label for="inputEmail" class="form-label text-light">Adresse email</label>
          <input type="email"
                 value="{{ last_username }}"
                 name="email"
                 id="inputEmail"
                 class="form-control bg-dark text-light border-secondary"
                 autocomplete="email"
                 required autofocus>
        </div>

        <div class="mb-3">
          <label for="inputPassword" class="form-label text-light">Mot de passe</label>
          <input type="password"
                 name="password"
                 id="inputPassword"
                 class="form-control bg-dark text-light border-secondary"
                 autocomplete="current-password"
                 required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-check mb-3">
          <input type="checkbox" name="_remember_me" id="rememberMe" class="form-check-input">
          <label for="rememberMe" class="form-check-label text-light">Se souvenir de moi</label>
        </div>

        <button class="btn btn-primary w-100" type="submit">
          Connexion
        </button>
      </form>
    {% endif %}
  </div>
</div>
{% endblock %}
